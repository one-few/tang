<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tangtang.entity.Advertise">

    <!--查询全部广告-->
    <select id="selectAllAdvertisement" resultType="advertise">
        select id,title,url,DATE_FORMAT(create_date,"%Y.%m.%d") createDate,delivery_time deliveryTime,description
            from entity_advertise
            order by create_date
    </select>

    <!--根据id查询广告-->
    <select id="selectById"  resultType="advertise">
        select id,title,url,DATE_FORMAT(create_date,"%Y.%m.%d") createDate,delivery_time deliveryTime,description
            from entity_advertise
            where id = #{id}
    </select>

    <!--添加一条广告-->
    <insert id="addAdvertisement">
        insert into entity_advertise
            (id,title,url,create_date,delivery_time,description)
            values
            (#{id},#{title},#{url},now(),#{deliveryTime},#{description})
    </insert>

    <!--更新一条广告-->
    <update id="updateAdvertisement">
        update entity_advertise
            set title=#{title},url=#{url},delivery_time=#{deliveryTime},description=#{description}
            where id=#{id}
    </update>

    <!--删除一条广告-->
    <delete id="deleteAdvertisement">
        delete from entity_advertise
            where id=#{id}
    </delete>
</mapper>