<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tangtang.mapper.FansMapper">
  <resultMap id="BaseResultMap" type="net.ttcxy.tangtang.entity.dto.Fans">
      <id column="id" jdbcType="VARCHAR" property="id" />
      <result column="follower" jdbcType="VARCHAR" property="follower" />
      <result column="user_id" jdbcType="VARCHAR" property="userId" />
      <result column="create_date" jdbcType="VARCHAR" property="createDate" />
  </resultMap>

    <select id="selectFans"  resultType="Integer" parameterType="net.ttcxy.tangtang.entity.dto.Fans">
      select count(1) from fans where user_id = #{userId} and follower = #{follower}
    </select>

    <select id="selectFansList" resultType="net.ttcxy.tangtang.entity.dto.User">
        select * from `fans` f,`user` u where u.id = f.follower and f.user_id = #{userId} order by f.create_date Desc
    </select>

    <insert id="insertFans" parameterType="net.ttcxy.tangtang.entity.dto.Fans">
        insert into fans (id,user_id,follower,create_date) values (#{id},#{userId},#{follower},#{createDate})
    </insert>

   <delete id="deleteFans" parameterType="net.ttcxy.tangtang.entity.dto.Fans">
       delete from fans where user_id = #{userId} and follower = #{follower}
   </delete>

</mapper>